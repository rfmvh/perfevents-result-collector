#!/usr/bin/env python

import argparse
import logging

from perfresultcollector.formatter import format_output
from perfresultcollector.models import Query
from perfresultcollector import set_logger_level

parser = argparse.ArgumentParser()
parser.set_defaults(listmode=0)
parser.add_argument("--name", action="store")
parser.add_argument("--debug", action="store_true", default=False)
parser.add_argument("--csv", action="store_true", default=False)

options = parser.parse_args()

logger = logging.getLogger(__name__)

def show_kernel(csv, debug, **kwargs):
    if debug:
        set_logger_level(logging.DEBUG)
    qr = Query("kernels")
    head = ["id", "name"]
    for key, value in kwargs.items():
        if value:
            qr.filter(**{key: value})    
    data = qr.execute()
    logger.debug(data)

    for line in format_output(data, csv, head):
        print(line)


if __name__ == '__main__':
    show_kernel(options.csv, options.debug, name=options.name)

